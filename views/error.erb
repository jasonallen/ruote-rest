
<div class="error">

  <div class="error_link"><a href="<%= @error.link %>">GET <%= @error.link %></a></div>

  <br/>

  <div>fei : <span class="error_fei"><%= @error.fei.expname %> <%= @error.fei.expid %></div>
  <div>call : <span class="error_message"><%= @error.message %></div>
  <div>date : <span class="error_date"><%= @error.date %></div>
  <div>text : <span class="error_text"><%= @error.stacktrace.split("\n").first %></div>

  <br/>

  <div>
    <form action="<%= @error.link %>" method="post" enctype="multipart/form-data">
      <input type="hidden" name="_method" value="DELETE"/>

      replay at error :
      <input type="submit" value="DELETE <%= @error.link %>" />
    </form>
  </div>

</div>

